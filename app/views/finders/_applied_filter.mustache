<div class="facet-tag-group">
{{#.}}
		<div class="facet-tag-wrapper">
			<p class="facet-tag-preposition">{{{preposition}}}</p>
			<div class="facet-tag">
				<p class="facet-tag-text">{{{text}}}</p>
				<a href="{{{link.href}}}"
					class="remove-filter"
					role="button"
					aria-label="Remove filter {{{text}}}"
					data-facet="{{{link.data.facet}}}"
					data-value="{{{link.data.value}}}"
					data-name="{{{link.data.name}}}">&#x2715;</a>
			</div>
    </div>
{{/.}}
</div>

<div class="facet-tag-group">
{{#.}}
		<div class="facet-tag">
			<p>{{{preposition}}}</p>
			<p class="facet-tag">
				{{{text}}}
				<a href="{{{link.href}}}"
					class="remove-filter"
					aria-role="button"
					aria-label="Remove filter for {{{link.data.facet}}} with value {{{link.data.value}}}"
					data-facet="{{{link.data.facet}}}"
					data-value="{{{link.data.value}}}"
					data-name="{{{link.data.name}}}">x</a>
			</p>
    </div>
{{/.}}
</div>

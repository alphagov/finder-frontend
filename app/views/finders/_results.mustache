<div class="feed">
  <span>Get updates to this list</span>
  <a href="{{atom_url}}">feed</a>
</div>

<ul>
  {{#documents}}
    <li class="document">
      <h3><a href='{{link}}'>{{title}}</a></h3>
      {{#summary}}
        <p>{{summary}}</p>
      {{/summary}}
      <dl>
        {{#metadata}}
          {{#is_text}}
            <dt class='metadata-text-label'>{{label}}:</dt>
            <dd class='metadata-text-value'>{{value}}</dd>
          {{/is_text}}

          {{#is_date}}
            <dt class='metadata-date-label'>{{label}}:</dt>
            <dd class='metadata-date-value'><time datetime='{{machine_date}}'>{{human_date}}</time></dd>
          {{/is_date}}
        {{/metadata}}
      </dl>
    </li>
  {{/documents}}
</ul>

<% if local_assigns[:options] %>
  <%
    options = []
    local_assigns[:options].each do |option|
      options << {
        text: option[:label],
        value: option[:value],
        selected: option[:selected],
        disabled: option[:disabled]
      }
    end
  %>

  <%= render "govuk_publishing_components/components/select", {
    id: "order",
    name: "order",
    label: "Sort byyy",
    options: options,
    aria_controls: "js-search-results-info",
    data_attributes: {
      default_sort_option: local_assigns[:default_value],
      relevance_sort_option: local_assigns[:relevance_value]
    }
  } %>
<% end %>

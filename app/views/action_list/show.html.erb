<% content_for :title, title %>
<% content_for :head do %>
  <% unless params[:page] %>
    <meta name="robots" content="noindex">
  <% end %>
<% end %>

<style>
  .app-c-banner {
    background-color: #035ea5;
    padding: 1px 25px 50px;
    color: #fff;
  }

  .app-c-banner--dark {
    background-color: #004c85;
    padding: 30px 25px 10px;
  }

  .app-c-banner--dark .gem-c-subscription-links,
  .app-c-banner--dark .gem-c-subscription-links__link,
  .app-c-banner--dark .gem-c-subscription-links__link:active,
  .app-c-banner--dark .gem-c-subscription-links__link:link,
  .app-c-banner--dark .gem-c-subscription-links__link:visited {
    color: #fff;
  }

  .app-c-banner__title,
  .app-c-banner__body {
    color: inherit;
  }

  .app-c-banner__body--strong {
    font-weight: bold;
  }

  .govuk-list--checked {
    list-style: none;
  }

  .govuk-list--checked li:before {
    content: 'âœ”';
    padding-right: 10px;
    color: #badfff;
    font-family: "nta", Arial, sans-serif;
  }

  .gem-c-document-list__attribute {
    font-size: 14px;
    line-height: 1;
    display: inline-block;
    outline: 2px solid transparent;
    outline-offset: -2px;
    color: #0b0c0c;
    background-color: #ffdd00;
    letter-spacing: 1px;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: 700;
    line-height: 1;
    padding-top: 5px;
    padding-right: 8px;
    padding-bottom: 4px;
    padding-left: 8px;
  }

  .topic-guidance__section {
    border-top: 10px solid #035ea5;
    padding-top: 20px;
  }
</style>


<div class="govuk-width-container">

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <!-- START BANNER -->
      <div class="app-c-banner">
        <%= render "govuk_publishing_components/components/title", {
          title: "Important things you may need to do for Brexit",
          inverse: true,
          margin_bottom: 4
        } %>

        <% if answers.present? %>
          <p class="govuk-body app-c-banner__body">Based on your answers, we know:</p>
          <ul class="govuk-list govuk-!-margin-top-3 govuk-list--checked app-c-banner__body--strong" style="color: white">
            <% answers.each do |answer| %>
              <li><%= answer[:readable_text] %></li>
            <% end %>
          </ul>
        <% else %>
          <p class="govuk-body app-c-banner__body">You didn't answer any questions. So we cannot give you any information.</p>
        <% end %>

        <p class="govuk-body govuk-!-margin-top-4 app-c-banner__body">
          <span class="app-c-banner__body--strong">If your circumstances have changed</span>, update your answers to get more relevant results.
        </p>
        <%= render "govuk_publishing_components/components/button", {
          text: "Update answers",
          href: qa_path,
          start: true
        } %>
      </div>
      <div class="app-c-banner app-c-banner--dark">
        <%= render "govuk_publishing_components/components/subscription-links", {
          email_signup_link: email_signup_path,
          feed_link: feed_path
        } %>
      </div>
    </div>
    <!-- END BANNER -->
  </div>


  <% topic_search_results.each do |topic| %>
    <div class="govuk-grid-row govuk-!-margin-top-6">
      <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-l"><%= topic[:label] %></h2>
      </div>
      <div class="govuk-grid-column-two-thirds">
        <%= render "govuk_publishing_components/components/document_list", {
          items: topic[:results]
        } %>
      </div>
      <div class="govuk-grid-column-one-third">
        <div class="topic-guidance__section">
          <%= render "govuk_publishing_components/components/govspeak", {
          } do %>
            <%= sanitize(topic[:guidance]) %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
